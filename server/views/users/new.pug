extends ../layouts/application.pug

block header
  = t('views.users.new.signUp')

block content
  +formFor()(action=route('users') method='post')
    +input(user, 'firstName', errors, t('views.users.new.firstName'))(type="text")
    +input(user, 'lastName', errors, t('views.users.new.lastName'))(type="text")
    +input(user, 'email',errors, t('views.users.new.email'))(type="text")
    +input(user, 'password', errors, t('views.users.new.password'))(type="password")
    +submit(user)(value=t('views.users.new.submit'))